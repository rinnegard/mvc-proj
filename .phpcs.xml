<?xml version="1.0"?>
<ruleset name="PHPCS rule set">
    <description>Custom rule set.</description>

    <file>.</file>

    <exclude-pattern>.bin</exclude-pattern>
    <exclude-pattern>build</exclude-pattern>
    <exclude-pattern>cache</exclude-pattern>
    <exclude-pattern>doc</exclude-pattern>
    <exclude-pattern>theme</exclude-pattern>
    <exclude-pattern>vendor</exclude-pattern>
    <exclude-pattern>storage</exclude-pattern>
    <exclude-pattern>tests</exclude-pattern>
    <exclude-pattern>server.php</exclude-pattern>
    <exclude-pattern>database</exclude-pattern>
    <exclude-pattern>config</exclude-pattern>
    <exclude-pattern>public</exclude-pattern>
    <exclude-pattern>console</exclude-pattern>
    <exclude-pattern>app/Models</exclude-pattern>
    <exclude-pattern>routes</exclude-pattern>

    <arg name="encoding" value="utf-8"/>
    <arg name="warning-severity" value="0"/>

    <rule ref="PSR12" />
</ruleset>
